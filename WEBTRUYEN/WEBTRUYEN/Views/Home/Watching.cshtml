    <!-- Header End -->
    <dd class="col-sm-10" style="width: 100%;">
        <div style="margin-top: 20px; text-align: center;">
            @if (Model.Chapter.PreviousChapterId != null)
            {
                <a href="@Url.Action("Watching", "Home", new { chapterId = Model.Chapter.PreviousChapterId })" style="color: white;">&laquo; Chương trước</a>
            }
