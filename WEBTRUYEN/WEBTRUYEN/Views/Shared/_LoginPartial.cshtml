@using Microsoft.AspNetCore.Identity
@using WEBTRUYEN.Data.Users
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <style>

    </style>
<ul class="navbar-nav">
    <li class="nav-item ">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            Tài khoản <span class="arrow_carrot-down"></span>
        </a>
        <ul class="dropdown">
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">
                        @User.Identity?.Name!
                    </a>
                </li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">Log out</button>
                    </form>
                </li>
            }
            else
            {
                <li>
                    <a asp-area="Identity" asp-page="/Account/Login" class="dropdown-item">Log in</a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Register" class="dropdown-item">Register</a>
                </li>
            }
        </ul>
    </li>
</ul>
