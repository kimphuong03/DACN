@model WEBTRUYEN.Models.ChapterComment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card text-white bg-dark">
        <div class="card-body">
            <h4 class="card-title">Chapter Comment Details</h4>
            <p class="card-description">Here are the details of the selected comment.</p>
            <hr />

            <blockquote class="blockquote">
                <p class="mb-0"><strong>Content:</strong> @Html.DisplayFor(model => model.Content)</p>
                <footer class="blockquote-footer text-white"><strong>Created At:</strong> @Html.DisplayFor(model => model.CreatedAt)</footer>
            </blockquote>

            <blockquote class="blockquote blockquote-primary">
                <p class="mb-0"><strong>User Email:</strong> @Html.DisplayFor(model => model.User.Email)</p>
                <footer class="blockquote-footer text-white"><strong>Chapter Title:</strong> @Html.DisplayFor(model => model.Chapter.Title)</footer>
            </blockquote>
        </div>
        <div class="card-body d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
