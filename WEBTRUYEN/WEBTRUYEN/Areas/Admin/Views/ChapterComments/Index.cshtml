@model IEnumerable<WEBTRUYEN.Models.ChapterComment>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chapter Comments Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="">
    <div class="card-header">
        <h4>Chapter Comments Management</h4>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th> <!-- Cột số thứ tự -->
                        <th>@Html.DisplayNameFor(model => model.Content)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th>@Html.DisplayNameFor(model => model.User.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Chapter)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int index = 1; // Khởi tạo biến đếm
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td> <!-- Hiển thị số thứ tự -->
                                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Chapter.Title)</td>
                                <td>
                                    <a class="btn btn-info btn-sm"
                                       asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-sm"
                                       asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            index++; // Tăng biến đếm
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No chapter comments available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
