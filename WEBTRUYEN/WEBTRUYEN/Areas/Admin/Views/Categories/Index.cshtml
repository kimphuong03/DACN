@model IEnumerable<WEBTRUYEN.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4 class="card-title">Categories Management</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> # </th>
                    <th> Category Name </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @index </td>
                            <td> @Html.DisplayFor(modelItem => item.Name) </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <p>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Create">Create New Category</a>
    </p>
</div>
