@model WEBTRUYEN.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body bg-dark text-white">
    <h4 class="card-title text-primary">Create Categories Management</h4>
    <p class="card-description">Add a new category to the list.</p>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-sm ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
