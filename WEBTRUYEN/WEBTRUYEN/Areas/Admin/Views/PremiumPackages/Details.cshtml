@model WEBTRUYEN.Models.PremiumPackage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1>Details</h1>
    <div class="">
        <div class="card-header">
            <h4>Premium Package Details</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly="readonly" style="color: black;" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Price" class="form-control" readonly="readonly" style="color: black;" />
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DurationInMonths" class="control-label"></label>
                    <input asp-for="DurationInMonths" class="form-control" readonly="readonly" style="color: black;" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
