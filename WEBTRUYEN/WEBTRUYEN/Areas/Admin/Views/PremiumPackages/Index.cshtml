@model IEnumerable<WEBTRUYEN.Models.PremiumPackage>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Premium Packages Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="">
    <div class="card-header">
        <h4>Premium Packages Management</h4>
    </div>

    <div class="card-body">
        <div class="text-end mb-3">
            <a class="btn btn-primary" asp-action="Create">Create New Package</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.DurationInMonths)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int index = 1; // Khởi tạo biến đếm
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td> <!-- Hiển thị số thứ tự -->
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>@Html.DisplayFor(modelItem => item.DurationInMonths)</td>
                                <td>
                                    <a class="btn btn-warning btn-sm"
                                       asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-info btn-sm"
                                       asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-sm"
                                       asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            index++; // Tăng biến đếm
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No premium packages available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
