@model WEBTRUYEN.Models.Chapter

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card text-white bg-dark">
        <div class="card-body">
            <h4 class="card-title">Delete Chapters Management</h4>
            <p class="card-description">Are you sure you want to delete this chapter?</p>
            <hr />

            <blockquote class="blockquote">
                <p class="mb-0"><strong>Title:</strong> @Html.DisplayFor(model => model.Title)</p>
                <footer class="blockquote-footer text-white"><strong>Product:</strong> @Html.DisplayFor(model => model.Product.Description)</footer>
            </blockquote>

            <blockquote class="blockquote blockquote-primary">
                <p class="mb-0"><strong>Content:</strong> @Html.DisplayFor(model => model.Content)</p>
                <footer class="blockquote-footer text-white"><strong>Created At:</strong> @Html.DisplayFor(model => model.CreatedAt)</footer>
            </blockquote>

            <blockquote class="blockquote">
                <p class="mb-0"><strong>Chapter Number:</strong> @Html.DisplayFor(model => model.ChapterNumber)</p>
                <footer class="blockquote-footer text-white"><strong>File Path:</strong> @Html.DisplayFor(model => model.FilePath)</footer>
            </blockquote>
        </div>

        <div class="card-body d-flex justify-content-between">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
