@model WEBTRUYEN.Models.Comment

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4 class="card-title">Delete Comment</h4>
    <p class="card-description">Are you sure you want to delete this comment?</p>
    <hr />

    <p class="text-primary"><strong>Content:</strong> @Html.DisplayFor(model => model.Content)</p>
    <p class="text-success"><strong>Product:</strong> @Html.DisplayFor(model => model.Product.Description)</p>
    <p class="text-danger"><strong>Created At:</strong> @Html.DisplayFor(model => model.CreatedAt)</p>
    <p class="text-muted"><strong>User:</strong> @Html.DisplayFor(model => model.User.Email)</p> <!-- Điều chỉnh theo mô hình của bạn -->

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
