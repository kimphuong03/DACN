@model WEBTRUYEN.Models.Rating
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card text-white bg-dark">
        <div class="card-body">
            <h1 class="card-title">Delete</h1>
            <h3>Are you sure you want to delete this?</h3>
            <h4>Rating Details</h4>
            <hr />

            <blockquote class="blockquote">
                <p class="mb-0"><strong>Product:</strong> @Html.DisplayFor(model => model.Product.Description)</p>
                <footer class="blockquote-footer text-white"><strong>User Email:</strong> @Html.DisplayFor(model => model.User.Email)</footer>
            </blockquote>

            <blockquote class="blockquote blockquote-primary">
                <p class="mb-0"><strong>Score:</strong> @Html.DisplayFor(model => model.Score)</p>
                <footer class="blockquote-footer text-white"><strong>Comment:</strong> @Html.DisplayFor(model => model.Comment)</footer>
            </blockquote>
        </div>
        <div class="card-body d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
