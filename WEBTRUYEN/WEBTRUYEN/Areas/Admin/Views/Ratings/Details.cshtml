@model WEBTRUYEN.Models.Rating

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card text-white bg-dark">
        <div class="card-body">
            <h4 class="card-title">Rating Details</h4>
            <p class="card-description">Here are the details of the selected rating.</p>
            <hr />

            <blockquote class="blockquote">
                <p class="mb-0"><strong>Product:</strong> @Html.DisplayFor(model => model.Product.Description)</p>
                <footer class="blockquote-footer text-white"><strong>User Email:</strong> @Html.DisplayFor(model => model.User.Email)</footer>
            </blockquote>

            <blockquote class="blockquote blockquote-primary">
                <p class="mb-0"><strong>Score:</strong> @Html.DisplayFor(model => model.Score)</p>
                <footer class="blockquote-footer text-white"><strong>Comment:</strong> @Html.DisplayFor(model => model.Comment)</footer>
            </blockquote>
        </div>
        <div class="card-body d-flex justify-content-between">
           
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
